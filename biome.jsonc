{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        // @see https://biomejs.dev/linter/rules/use-sorted-classes/
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": { "functions": ["cva", "cn"] }
        }
      },
      "suspicious": {
        "noUnknownAtRules": "warn"
      }
    },
    "domains": {
      "react": "recommended",
      "test": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "overrides": [
    {
      // @see https://github.com/biomejs/biome/issues/7223#issuecomment-3217084656
      "includes": ["assets/tailwind.css"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
